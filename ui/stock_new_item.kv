<StockNewScreen>:

    MDFloatLayout:
        size_hint: 1, 1
        md_bg_color: [0, 0, 0, 1]

        MCard:
            id: _bar
            padding: [20, 0, 0, 0]
            size_hint: 1, 0.1
            pos_hint: {'top': 1, 'x': 0}
            md_bg_color: app.nav_color

            MDLabel:
                text: 'Select Category to add new item'
                halign: 'center'
                adaptive_size: True
                height: _bar.height
                font_size: 24

        MCard:
            id: _mc
            size_hint: 1, 0.795
            pos_hint: {'top': 0.895, 'x': 0}
            md_bg_color: [1, 0.99, 0.98, 0.94]

            MDFloatLayout:
                id: _fl
                size_hint: None, None
                size: _mc.size

                MDBoxLayout:
                    size: _fl.size
                    orientation: 'vertical'
                    pos_hint: {'top': 1}
                    padding: 10

                    MDRectangleFlatButton:
                        text: '+ New Category'
                        pos_hint: {'center_x': .5, 'center_y': .5}
                        on_release: app.win_man.switch_to(app.screens[8])

                    MDStackLayout:
                        id: _cat_list
                        spacing: 15
                        
    NavBar: one: [1, 1, 1, 1]
