<UpdateItemContents>:
    MDFloatLayout:
        size_hint: 1, 1
        md_bg_color: [0, 0, 0, 1]

        MCard:
            id: _bar
            padding: [0, 0, 0, 0]
            size_hint: 1, 0.1
            pos_hint: {'top': 1, 'x': 0}
            md_bg_color: app.nav_color

            MDIconButton:
                icon: 'arrow-left'
                theme_text_color: 'Custom'
                text_color: app.theme_cls.opposite_bg_normal
                user_font_size: 18
                adaptive_size: True
                size: 30, 30
                padding: 0
                pos_hint: {'center_y':.5, 'x': 0}
                on_press: app.win_man.switch_to(app.screens[6])

            MDLabel:
                text: 'Update Product details'
                halign: 'left'
                adaptive_size: True
                height: _bar.height
                font_size: 24

        MCard:
            id: _mc
            size_hint: 1, 0.795
            pos_hint: {'top': 0.895, 'x': 0}
            md_bg_color: [1, 0.99, 0.98, 0.94]

            MDFloatLayout:
                id: _fl
                size_hint: None, None
                size: _mc.size

                MDStackLayout:
                    size_hint_y: 0.87
                    # orientation: 'vertical'
                    pos_hint: {'top': 1}
                    padding: "22dp", 0, 0, 0
                    spacing: 12

                    MDTextField:
                        id: _item_name
                        hint_text: "Enter new Product Name"
                        hint_text_font_size: "20sp"
                        hint_text_color_normal: [0, 0, 0, 1]
                        line_color_normal: [0, 0, 0, 1]
                        helper_text: "Actual NAME of the PRODUCT"
                        pos_hint:{'center_x': 0.5}
                        size_hint_x: 0.8

                    MDTextField:
                        id: _selling_price
                        hint_text: "Enter new Price"
                        hint_text_color_normal: [0, 0, 0, 1]
                        line_color_normal: [0, 0, 0, 1]
                        helper_text: "SELLING PRICE of the Product"
                        pos_hint:{'center_x': 0.5}
                        size_hint_x: 0.8

                    MDTextField:
                        id: _instock
                        hint_text: "Enter new In-stock value"
                        hint_text_color_normal: [0, 0, 0, 1]
                        line_color_normal: [0, 0, 0, 1]
                        pos_hint:{'center_x': 0.5}
                        helper_text: "Number of PRODUCTS available In stock"
                        size_hint_x: 0.8

                    MDTextField:
                        id: _lowstock
                        hint_text: "Enter new Low stock value"
                        hint_text_color_normal: [0, 0, 0, 1]
                        line_color_normal: [0, 0, 0, 1]
                        helper_text: "Number to determine if PRODUCT is running low in STOCK"
                        pos_hint:{'center_x': 0.5}
                        size_hint_x: 0.8

                    MDTextField:
                        id: _buying_price
                        hint_text: "Enter new Buying price"
                        hint_text_color_normal: [0, 0, 0, 1]
                        line_color_normal: [0, 0, 0, 1]
                        helper_text: "BUYING PRICE of a single PRODUCT"
                        pos_hint:{'center_x': 0.5}
                        size_hint_x: 0.8

                    MDBoxLayout:
                        size_hint_y: 0.13
                        pos_hint_y: {'top': 0.13}
                        orientation: 'horizontal'
                        spacing: 10

                        MDFillRoundFlatButton:
                            text_color: [1, 1, 1, 1]
                            text: 'UPDATE'
                            on_release: app.update_item()

                        MDFillRoundFlatButton:
                            text_color: [1, 1, 1, 1]
                            text: 'CANCEL'
                            on_release: app.win_man.switch_to(app.screens[6])


        NavBar:
            one: [1, 1, 1, 1]