<SalesMScreen>:

    MDFloatLayout:
        size_hint: 1, 1
        md_bg_color: [0, 0, 0, 1]

        MCard:
            id: _bar
            padding: [20, 0, 0, 0]
            size_hint: 1, 0.1
            pos_hint: {'top': 1, 'x': 0}
            md_bg_color: app.nav_color

            MDLabel:
                text: 'View sales by'
                halign: 'center'
                adaptive_size: True
                height: _bar.height
                font_size: 24

            MDFloatLayout:

                MDRaisedButton:
                    id: _cart_butt
                    text: 'LOGOUT'
                    halign: 'right'
                    adaptive_size: True
                    #size_hint: 1, 1
                    #size_hint_x: None
                    #height: 30
                    #width: 40
                    pos_hint: {'right': 1, 'center_y': .5}
                    font_size: 20
                    md_bg_color: [1, 0, 0, 1]
                    on_press: app.logout

        MCard:
            id: _mc
            size_hint: 1, 0.795
            pos_hint: {'top': 0.895, 'x': 0}
            md_bg_color: [1, 0.99, 0.98, 0.94]

            MDFloatLayout:
                id: _fl
                size_hint: 1, 1
                pos_hint: {'top': 1}

                MDRaisedButton:
                    md_text_color: "black"
                    on_release: app.sales_data(root, 'da_te')
                    pos_hint: {'top': 0.9, 'center_x': 0.5}
                    size_hint: 0.4, 0.25
                    text: 'Date'
                    md_bg_color: [1.0, 0.4, 1.0, 1]
                    text_color: [0, 0, 0, 1]
                    font_size: "25sp"

                MDRaisedButton:
                    md_text_color: "black"
                    pos_hint: {'top': 0.6, 'center_x': 0.5}
                    size_hint: 0.4, 0.25
                    text: 'Item'
                    on_release: app.sales_data(root, 'brand')
                    md_bg_color: [0, 0.9, 0.9, 1]
                    text_color: [0, 0, 0, 1]
                    font_size: "25sp"

                MDRaisedButton:
                    md_text_color: "black"
                    pos_hint: {'top': 0.3, 'center_x': 0.5}
                    size_hint: 0.4, 0.25
                    text: 'Payment'
                    on_release: app.sales_payment(root, 'payment')
                    md_bg_color: [0, 1.0, 0.2, 1]
                    text_color: [0, 0, 0, 1]
                    font_size: "25sp"

                

        NavBar:
            one: [1, 1, 1, 1]        

    

