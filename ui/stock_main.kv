<StockMScreen>:

    MDFloatLayout:
        size_hint: 1, 1
        md_bg_color: [0, 0, 0, 1]

        MCard:
            id: _bar
            padding: [20, 0, 0, 0]
            size_hint: 1, 0.1
            pos_hint: {'top': 1, 'x': 0}
            md_bg_color: app.nav_color

            MDLabel:
                text: 'Inventory Manager'
                halign: 'center'
                adaptive_size: True
                height: _bar.height
                font_size: 24

        MCard:
            id: _mc
            size_hint: 1, 0.795
            pos_hint: {'top': 0.895, 'x': 0}
            md_bg_color: [1, 0.99, 0.98, 0.94]

            MDFloatLayout:
                size: _mc.size
                pos_hint: {'top': 1}

                MDRaisedButton:
                    md_text_color: "black"
                    on_release: app.stock_main(func2='new_stock_item')
                    pos_hint: {'top': 0.9, 'center_x': 0.5}
                    size_hint: 0.4, 0.25
                    text: '+ New Stock Item'
                    md_bg_color: [0.6, 1.0, 0.2, 1]
                    text_color: [0, 0, 0, 1]
                    font_size: "25sp"

                MDRaisedButton:
                    md_text_color: "black"
                    pos_hint: {'top': 0.6, 'center_x': 0.5}
                    size_hint: 0.4, 0.25
                    text: 'Update Stock Item'
                    on_release: app.stock_main(func2='stock_item')
                    md_bg_color: [1.0, 0.2, 0.2, 1]
                    text_color: [0, 0, 0, 1]
                    font_size: "25sp"

                MDRaisedButton:
                    md_text_color: "black"
                    pos_hint: {'top': 0.3, 'center_x': 0.5}
                    size_hint: 0.4, 0.25
                    text: 'View Stock'
                    on_release: app.stock_main(func2='view_stock')
                    md_bg_color: [0.2, 0.8, 1.0, 1.0]
                    text_color: [0, 0, 0, 1]
                    font_size: "25sp"

                


    NavBar:
        one: [1, 1, 1, 1]
