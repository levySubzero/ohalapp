<RegisterScreen>:
    name: "register"
    #AnchorLayout:
    #    GridLayout:
    #        rows: 3
    #        size_hint: .7,1
    #        spacing: dp(5)
    MDBoxLayout:
        orientation: "vertical"

        MDLabel:
            text: 'Create account'
            valign: 'center'
            #size: self.texture_size
            size_hint_y: None
            #size_hint_x: None
            height: 30
            pos_hint: {'center_y':.5, 'x': 0}
            font_size: 18
            color: app.theme_cls.opposite_bg_normal

        MDTextField:
            id: _biz_id
            hint_text: "Business name"
            required: True
            icon_right: "account-box"
            write_tab: False
            helper_text_mode: "on_error"
            helper_text: "This field is required"
            on_text_validate:



        MDTextField:
            id: _username
            hint_text: "Username"
            required: True
            icon_right: "account"
            write_tab: False
            helper_text_mode: "on_error"
            helper_text: "This field is required"
            on_text_validate:


        MDTextField:
            id: _phone_no
            hint_text: "Phone number"
            required: True
            icon_right: "phone"
            write_tab: False
            helper_text_mode: "on_error"
            helper_text: "This field is required"
            on_text_validate:


        MDTextField:
            id: _email
            hint_text: "Email"
            required: True
            icon_right: "email"
            write_tab: False
            helper_text_mode: "on_error"
            helper_text: "This field is required"
            on_text_validate:


        MDTextField:
            id: _password
            hint_text: "Password"
            required: True
            icon_right: "lock"
            write_tab: False
            password: True
            helper_text_mode: "on_error"
            helper_text: "This field is required"
            on_text_validate:

        MDTextField:
            id: _con_password
            hint_text: "Confirm Password"
            required: True
            icon_right: "lock"
            write_tab: False
            password: True
            helper_text_mode: "on_error"
            helper_text: "This field is required"
            on_text_validate:


            #MDRoundFlatButton:
            #    id: register_btn
            #    size_hint: .2, None
            #    text: "Register"
            #    #disabled: not _password.text == _con_password.text
            #    #on_press:
                #    root.register_btn_click()
            #    on_release:
            #        app.details_account()

            MDBoxLayout:
                orientation: "vertical"
                spacing: 5

                MDLabel:
                    halign: "left"
                    text: "Already have an account ?"

                MDFlatButton:
                    text: "Login"
                    halign: "left"
                    pos_hint: {"y": .5}
                    on_release:
                        app.root.current = "login"
                        root.win_man.transition.direction = 'left'


<LoginScreen>:
    name: "login"
    AnchorLayout:
        GridLayout:
            rows: 3
            size_hint: .5,.5
            MDBoxLayout:
                orientation: "vertical"
                spacing: dp(10)
                MDTextField:
                    id: login_username
                    hint_text: "Username"
                    write_tab: False
                    required: True
                    icon_right: "account"
                    helper_text_mode: "on_error"
                    helper_text: "This field is required"


                MDTextField:
                    id: login_password
                    hint_text: "Password"
                    write_tab: False
                    required: True
                    icon_right: "key"
                    password: True
                    helper_text_mode: "on_error"
                    helper_text: "This field is required"

            MDRoundFlatButton:
                id: login_btn
                size_hint: .2, None
                text: "Login"
                on_press:
                    root.user_login()
                on_release:

            MDBoxLayout:
                MDLabel:
                    halign: "left"
                    text: "Don't have an account ?"

                MDFlatButton:
                    text: "Register"
                    halign: "left"
                    on_release:
                        app.root.current = "register"
                        root.manager.transition.direction = 'right'



