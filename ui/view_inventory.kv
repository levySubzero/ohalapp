<ViewInventoryScreen>:

    MDFloatLayout:
        size_hint: 1, 1
        md_bg_color: [0, 0, 0, 1]

        MCard:
            id: _bar
            padding: [0, 0, 0, 0]
            size_hint: 1, 0.1
            pos_hint: {'top': 1, 'x': 0}
            md_bg_color: app.nav_color
            
            elevation: 4

            MDIconButton:
                icon: 'arrow-left'
                theme_text_color: 'Custom'
                text_color: app.theme_cls.opposite_bg_normal
                user_font_size: 18
                adaptive_size: True
                size: 30, 30
                padding: 0
                pos_hint: {'center_y':.5, 'x': 0}
                on_press: app.win_man.switch_to(app.screens[6])

            MDLabel:
                text: 'Inventory'
                halign: 'left'
                adaptive_size: True
                height: _bar.height
                font_size: 24

        MCard:
            id: _mc
            size_hint: 1, 0.8
            pos_hint: {'top': 0.9, 'x': 0}
            md_bg_color: [1, 0.99, 0.98, 0.94]
            padding: ["20dp", "10dp", "10dp", 0]

            ScrollView:
                MDStackLayout:
                    id: _inventory_items
                    spacing: 15

        NavBar:
            one: [1, 1, 1, 1]
